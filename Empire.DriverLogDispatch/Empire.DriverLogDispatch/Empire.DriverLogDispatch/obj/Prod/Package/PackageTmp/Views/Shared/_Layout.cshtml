@using Empire.Shared.Utilities;

@{
    string ApplicationName = AppSettings.Current.ApplicationName;
    bool bAuthenticated = this.User.Identity.IsAuthenticated;


}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>@ViewBag.Title - @ApplicationName - Driver Log</title>

    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">

    <link rel="stylesheet" href="~/Content/kendo/2014.1.318/kendo.common.min.css" />

    <link rel="stylesheet" href="~/Content/kendo/2014.1.318/kendo.default.min.css" />
    <link rel="stylesheet" href="~/Content/kendo/2014.1.318/kendo.default.mobile.min.css" />


    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @Scripts.Render("~/bundles/jqueryMin")
    @Scripts.Render("~/bundles/kendo")



    @section Scripts
    {

        <script>
            let baseUrl = null;
            let isAdmin = false;
            let currentRunNumber = null;
        </script>


    }
</head>
<body>
    <div class="navBar navbar-inverse navbar-inverse-white navbar-fixed-top" style="text-align: center">
        <div class="container-div-img" style="width: 100%;">
            <img border="0" src="~/images/banner_Slim.jpg" id="imgLogo" alt="@ApplicationName" />
        </div>
        @if (bAuthenticated)
        {
            <nav id="navbar" class="custNavbar navbar-light navbar-expand-md no-print text-right">
                @Html.Partial("NavBar")
            </nav>
        }
        <div class="container body-content">
            @RenderBody()

            <hr />


            <footer>
                <p>Copyright  &copy;@DateTime.Now.Year - @ApplicationName LLC.All Rights Reserved.</p>
            </footer>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/signature")

    @Scripts.Render("~/bundles/application")

    @RenderSection("scripts", required: false)
</body>
</html>
